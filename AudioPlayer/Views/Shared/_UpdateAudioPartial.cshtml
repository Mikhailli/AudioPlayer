@model AudioPlayer.AudioViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link rel="stylesheet" type="text/css" href="~/css/common.css">
<div id="dlgConfirm" class="modal font-ktm" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Переименовать аудио?</h5>
                <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="UpdateAudio">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()"/>
                    <input asp-for="NumberInPlayList" type="hidden"/>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="modal-btn-confirm" type="button" class="btn btn-ktm pl-4 pr-4" data-save="modal">Да</button>
                <button id="modal-btn-cancel" type="button" class="btn btn-light pl-4 pr-4" data-mdb-dismiss="modal">Нет</button>
            </div>
        </div>
    </div>
</div>